<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:clickable="true"
    android:elevation="@dimen/_12sdp"
    android:focusable="true"
    android:outlineAmbientShadowColor="#009688"
    android:outlineSpotShadowColor="#3F51B5"
    app:cardBackgroundColor="#D0E7E5"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_7ssp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start"
                android:letterSpacing="0.02"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_2sdp"
                android:text="Issiq bu yerda siz qanday husg havabr sds  xonalar talabalar uchun"
                android:textColor="#02071F"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_univer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_univer"
                android:drawablePadding="@dimen/_3sdp"
                android:maxLines="1"
                android:text="Farg'ona viloyati namangan tumani"
                android:textColor="#01092F"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                app:drawableTint="#767981" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_3sdp"
                android:maxLines="2"
                android:text="Farg'ona viloyati namangan tumani"
                android:textColor="#01092F"
                android:textSize="@dimen/_9ssp"
                app:drawableTint="#767981" />
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>